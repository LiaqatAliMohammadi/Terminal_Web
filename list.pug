extends ../layout

block content
    .row
        .col-sm-8
            h1=title
        if user
            .col-sm-4
                a(href="/products/add", class="btn btn-success float-right") Add New Product
        table.table (style='width:100%', border='1')
        thead
            tr
                th Name
                th Price
                th discription
                th rating
                th Actions
        tbody
            each product in products
                tr
                    td=product.name
                    td=product.price
                    td=product.discription
                    td=product.rating
                    td
                        a(href="/products/cart/"+product._id, class="btn btn-info") Add To Cart